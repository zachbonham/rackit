require 'rubygems'
require './lib/rackit.rb'


begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "rackit"
    gemspec.summary = "Ruby command line interface for Rackspace Cloud Servers Ruby API"
    gemspec.description = "A Ruby command line interface for the Ruby API to version 1.0 of the Rackspace Cloud Servers product."
    gemspec.email = "zachbonham@gmail.com"
    gemspec.homepage = "http://github.com/zachbonham/rackit"
    gemspec.authors = ["Zach Bonham"]
    gemspec.add_dependency 'cloudservers'
  end

rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install jeweler"
end
